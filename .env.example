# Database
# Update this with your PostgreSQL connection string
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME?schema=public
# Example: postgresql://postgres:mypassword@localhost:5432/pe_portal?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/pe_portal?schema=public"

# NextAuth (for session management)
NEXTAUTH_SECRET="your-secret-key-change-in-production-$(openssl rand -base64 32)"
NEXTAUTH_URL="http://localhost:3000"

# Resend API (optional - only needed for email functionality)
RESEND_API_KEY="your-resend-api-key"

# App Configuration
APP_NAME="Performance Evaluation Portal"
